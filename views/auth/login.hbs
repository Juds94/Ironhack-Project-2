<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Inicio de sesión</h1>
            <hr>

            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Dirección de email</label>
                    <input type="email" class="form-control" id="emailInput" name="email">
                </div>

                <div class="mb-3">
                    <label for="passwordInput" class="form-label" style="text-color:white">Contraseña</label>
                    <input type="password" class="form-control" id="passwordInput" name="password">
                </div>
                <div class="acceso">
                    <div class="acceso d-grid gap-2">
                        <button type="submit" class="btn btn-light" style="--bs-text-opacity: .5">Acceder</button>
                    </div>
                </div>
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>